{
  "formId": "com.networknt.light.blog.post.update",
  "version": 1,
  "action": [
    {
      "category": "blog",
      "name": "updPost",
      "readOnly": false,
      "title": "Submit",
      "success": "/page/com-networknt-light-v-blog-admin-home"
    }
  ],
  "schema": {
    "type": "object",
    "title": "Blog Post Update",
    "required": [
      "postId",
      "title",
      "summary",
      "content"
    ],
    "properties": {
      "parentId": {
        "title": "Parent Id",
        "type": "string"
      },
      "postId": {
        "title": "Post Id",
        "type": "string",
        "readonly": true
      },
      "title": {
        "title": "Title",
        "type": "string"
      },
      "source": {
        "title": "Source",
        "type": "string"
      },
      "summary": {
        "title": "Summary",
        "type": "string"
      },
      "content": {
        "title": "Content",
        "type": "string"
      }
    }
  },
  "form": [
    {
      "key": "parentId",
      "type": "rc-select",
      "multiple": false,
      "action" : {
        "get": {
          "url": "/api/rs?cmd={\"category\": \"blog\", \"name\": \"getBlogDropdown\", \"readOnly\": true}"
        }
      }
    },
    "postId",
    "title",
    "source",
    {
      "key": "summary",
      "type": "textarea"
    },
    {
      "key": "content",
      "type": "textarea"
    }
  ]
}
