{
  "formId": "com.networknt.light.blog.post.add",
  "version": 1,
  "action": [
    {
      "category": "blog",
      "name": "addPost",
      "readOnly": false,
      "title": "Submit",
      "success": "/blog"
    }
  ],
  "schema": {
    "type": "object",
    "title": "Blog Post",
    "required": [
      "parentRid",
      "title",
      "summary",
      "content"
    ],
    "properties": {
      "parentRid": {
        "title": "Parent Rid",
        "type": "string",
        "readOnly": true
      },
      "title": {
        "title": "Title",
        "type": "string"
      },
      "originalAuthor": {
        "title": "Original Author",
        "type": "string"
      },
      "originalSite": {
        "title": "Original Site",
        "type": "string"
      },
      "originalUrl": {
        "title": "Original Url",
        "type": "string"
      },
      "summary": {
        "title": "Summary",
        "type": "string"
      },
      "content": {
        "title": "Content",
        "type": "string"
      },
      "tags": {
        "title": "Tags",
        "type": "array",
        "maxItems": 10
      }
    }
  },
  "form": [
    "parentRid",
    "title",
    "originalAuthor",
    "originalSite",
    "originalUrl",
    {
      "key": "summary",
      "type": "textarea"
    },
    {
      "key": "content",
      "type": "textarea"
    },
    {
      "key": "tags",
      "type": "rc-select",
      "tags": true,
      "maxTagTextLength": 20,
      "action": {
        "get" : {
          "url": "/api/rs?cmd={\"category\": \"tag\", \"name\": \"getTagDropdown\", \"readOnly\": true}"
        }
      }
    }
  ]
}
