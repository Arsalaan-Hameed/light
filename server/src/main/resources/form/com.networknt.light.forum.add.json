{
  "formId": "com.networknt.light.forum.add",
  "version": 1,
  "action": [
    {
      "category": "forum",
      "name": "addForum",
      "readOnly": false,
      "title": "Submit",
      "success": "/admin/forumAdmin"
    }
  ],
  "schema": {
    "type": "object",
    "title": "Forum",
    "required": [
      "categoryId",
      "description"
    ],
    "properties": {
      "categoryId": {
        "title": "Forum Id",
        "type": "string"
      },
      "description": {
        "title": "Description",
        "type": "string"
      },
      "in_Own": {
        "title": "Parent",
        "type": "array",
        "maxItems": 1
      },
      "out_Own": {
        "title": "Children",
        "type": "array"
      }
    }
  },
  "form": [
    "categoryId",
    "description",
    {
      "key": "in_Own",
      "type": "rc-select",
      "multiple": false,
      "action" : {
        "get": {
          "url": "/api/rs?cmd={\"category\": \"forum\", \"name\": \"getForumDropdown\", \"readOnly\": true}"
        }
      }
    },
    {
      "key": "out_Own",
      "type": "rc-select",
      "multiple": true,
      "action" : {
        "get": {
          "url": "/api/rs?cmd={\"category\": \"forum\", \"name\": \"getForumDropdown\", \"readOnly\": true}"
        }
      }
    }
  ]
}
