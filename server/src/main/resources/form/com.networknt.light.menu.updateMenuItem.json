{
    "formId": "com.networknt.light.menu.updateMenuItem",
    "version": 1,
    "action" : [{
        "category" : "menu",
        "name" : "updMenuItem",
        "readOnly": false,
        "title": "Submit",
        "success" : "/admin/menuAdmin"
    }],
    "schema": {
        "type": "object",
        "title": "Menu Item",
        "required": ["menuItemId", "text"],
        "properties": {
            "menuItemId": {
                "title": "Menu Item Id",
                "type": "string",
                "readOnly": true
            },
            "host": {
                "title": "Host",
                "type": "string"
            },
            "text" : {
                "title": "Text",
                "type": "string"
            },
            "route": {
                "title": "Route",
                "type": "string"
            },
            "roles": {
                "title": "Roles",
                "type": "array"
            },
            "out_Own": {
                "type": "array",
                "title": "Menu Items"
            }
        }
    },
    "form": [
        "menuItemId",
        "host",
        "text",
        "route",
        {
            "key": "roles",
            "type": "rc-select",
            "multiple": true,
            "action" : {
                "get": {
                    "url": "/api/rs?cmd={\"category\": \"role\", \"name\": \"getRoleDropdown\", \"readOnly\": true}"
                }
            }
        },
        {
            "key": "out_Own",
            "type": "rc-select",
            "multiple": true,
            "action" : {
                "get": {
                    "url": "/api/rs?cmd={\"category\": \"menu\", \"name\": \"getMenuItemMap\", \"readOnly\": true}"
                }
            }
        }
    ]
}

