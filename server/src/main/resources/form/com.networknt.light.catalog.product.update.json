{
  "formId": "com.networknt.light.catalog.product.update",
  "version": 1,
  "action": [
    {
      "category": "catalog",
      "name": "updProduct",
      "readOnly": false,
      "title": "Submit",
      "success": "/page/com-networknt-light-v-blog-admin-home"
    }
  ],
  "schema": {
    "type": "object",
    "title": "Catalog Product Update",
    "required": [
      "productId",
      "name",
      "description"
    ],
    "properties": {
      "parentRid": {
        "title": "Parent Rid",
        "type": "string"
      },
      "productId": {
        "title": "Product Id",
        "type": "string",
        "readonly": true
      },
      "name": {
        "title": "Name",
        "type": "string"
      },
      "description": {
        "title": "Description",
        "type": "string"
      },
      "variants": {
        "type": "array",
        "minItems": 1,
        "maxItems": 10,
        "items": {
          "type": "object",
          "properties": {
            "sku": {
              "title": "Sku",
              "type": "string"
            },
            "type": {
              "title": "Type",
              "type": "string"
            },
            "price": {
              "title": "Price",
              "type": "number"
            },
            "image": {
              "title": "Image",
              "type": "string"
            },
            "inventory": {
              "title": "Inventory",
              "type": "number"
            }
          },
          "required": [
            "sku",
            "type",
            "price"
          ]
        }
      }
    }
  },
  "form": [
    {
      "key": "parentRid",
      "type": "rc-select",
      "multiple": false,
      "action" : {
        "get": {
          "url": "/api/rs?cmd={\"category\": \"catalog\", \"name\": \"getCatalogDropdown\", \"readOnly\": true}"
        }
      }
    },
    "productId",
    "name",
    {
      "key": "description",
      "type": "textarea",
      "rows": 20
    },
    {
      "key": "variants",
      "add": "New",
      "style": {
        "add": "btn-success"
      },
      "items": [
        "variants[].sku",
        "variants[].type",
        "variants[].price",
        "variants[].image",
        "variants[].inventory"
      ]
    }
  ]
}
