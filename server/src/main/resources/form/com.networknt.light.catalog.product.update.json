{
  "formId": "com.networknt.light.catalog.product.update",
  "version": 1,
  "action": [
    {
      "category": "catalog",
      "name": "updProduct",
      "readOnly": false,
      "title": "Submit",
      "success": "/catalog"
    }
  ],
  "schema": {
    "type": "object",
    "title": "Catalog Product Update",
    "required": [
      "entityId",
      "name",
      "description",
      "content",
      "variants"
    ],
    "properties": {
      "parentRid": {
        "title": "Parent Rid",
        "type": "string"
      },
      "entityId": {
        "title": "Product Id",
        "type": "string",
        "readOnly": true
      },
      "name": {
        "title": "Name",
        "type": "string"
      },
      "delivery": {
        "title": "Delivery",
        "type": "string"
      },
      "tags": {
        "title": "Tags",
        "type": "array",
        "maxItems": 10
      },
      "variants": {
        "type": "array",
        "minItems": 1,
        "maxItems": 10,
        "items": {
          "type": "object",
          "properties": {
            "sku": {
              "title": "Sku",
              "type": "string"
            },
            "type": {
              "title": "Type",
              "type": "string"
            },
            "currency": {
              "title": "Currency",
              "type": "string"
            },
            "price": {
              "title": "Price",
              "type": "number"
            },
            "image": {
              "title": "Image",
              "type": "string"
            },
            "inventory": {
              "title": "Inventory",
              "type": "number"
            }
          },
          "required": [
            "sku",
            "type",
            "currency",
            "price"
          ]
        }
      },
      "description": {
        "title": "Description",
        "type": "string"
      },
      "content": {
        "title": "Detail",
        "type": "string"
      }
    }
  },
  "form": [
    {
      "key": "parentRid",
      "type": "rc-select",
      "multiple": false,
      "action" : {
        "get": {
          "url": "/api/rs?cmd={\"category\": \"catalog\", \"name\": \"getCatalogDropdown\", \"readOnly\": true}"
        }
      }
    },
    "entityId",
    "name",
    {
      "key": "delivery",
      "type": "rc-select",
      "multiple": false,
      "items": [
        {"value": "SO", "label": "Shipping only"},
        {"value": "PO", "label": "Pickup only"},
        {"value": "SP", "label": "Shipping or Pickup"},
        {"value": "DL", "label": "Download"},
        {"value": "EM", "label": "Email"},
        {"value": "OS", "label": "One time subscription"},
        {"value": "RS", "label": "Recurring subscription"}
      ]
    },
    {
      "key": "tags",
      "type": "rc-select",
      "tags": true,
      "maxTagTextLength": 20,
      "action": {
        "get" : {
          "url": "/api/rs?cmd={\"category\": \"tag\", \"name\": \"getTagDropdown\", \"readOnly\": true}"
        }
      }
    },
    {
      "key": "variants",
      "add": "New",
      "style": {
        "add": "btn-success"
      },
      "items": [
        "variants[].sku",
        "variants[].type",
        "variants[].currency",
        "variants[].price",
        "variants[].image",
        "variants[].inventory"
      ]
    },
    {
      "key": "description",
      "type": "textarea",
      "rows": 5
    },
    {
      "key": "content",
      "type": "textarea",
      "rows": 15
    }
  ]
}
